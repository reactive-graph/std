{
  "$id": "https://schema.reactive-graph.io/schema/json/component.schema.json",
  "namespace": "arithmetic",
  "type_name": "arithmetic_gate",
  "description": "Arithmetic operation with two inputs and one result",
  "properties": [
    {
      "name": "lhs",
      "description": "The left hand side of the arithmetic operation",
      "data_type": "number",
      "socket_type": "input",
      "extensions": [
        {
          "namespace": "flow_editor",
          "type_name": "widget_type",
          "extension": "NumberInput"
        },
        {
          "namespace": "flow_editor",
          "type_name": "socket",
          "extension": {
            "width": 60,
            "height": 30,
            "offset": 5
          }
        }
      ]
    },
    {
      "name": "rhs",
      "description": "The right hand side of the arithmetic operation",
      "data_type": "number",
      "socket_type": "input",
      "extensions": [
        {
          "namespace": "flow_editor",
          "type_name": "widget_type",
          "extension": "NumberInput"
        },
        {
          "namespace": "flow_editor",
          "type_name": "socket",
          "extension": {
            "width": 60,
            "height": 30,
            "offset": 5
          }
        }
      ]
    },
    {
      "name": "result",
      "description": "The result of the arithmetic operation",
      "data_type": "number",
      "socket_type": "output",
      "mutability": "immutable",
      "extensions": [
        {
          "namespace": "flow_editor",
          "type_name": "widget_type",
          "extension": "NumberInput"
        },
        {
          "namespace": "flow_editor",
          "type_name": "socket",
          "extension": {
            "width": 60,
            "height": 30,
            "offset": 5
          }
        }
      ]
    }
  ],
  "extensions": [
    {
      "namespace": "core",
      "type_name": "component_category",
      "extension": "math"
    }
  ]
}
